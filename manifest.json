{
    "name": "Yalla",
    "description": "Yalla gets the right people working on the right things in the right priority. Now you can use it from anywhere on the web.",
    "icons": {"128": "icon_128.png", "48": "icon_48.png", "16": "icon_16.png"},
    "version": "0.1",
    "author": "Yalla",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "https://www.yallahq.com/*"
    ],

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "browser_action": {
        "default_icon": {
            "16": "icon_16.png"
        },
        "default_title": "Yalla",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2
}
